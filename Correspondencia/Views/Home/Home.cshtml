@{
    ViewData["Title"] = "Inicio";
}

    <div class="container text-center">

        <br />
        <br />
        <br />

        <h4>Secretaria de Desarrollo Rural</h4>
        <h4>Sistema de control y seguimiento de Correspondencia</h4>

        <br />
        <br />
        <div data-spy="scroll">
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th scope="col">Enviado</th>
                        <th scope="col">Dirección destino</th>
                        <th scope="col">Remitente</th>
                        <th scope="col">Dirección remitente</th>
                        <th scope="col">Puesto remitente</th>
                        <th scope="col">Tipo de documento</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Documento fisico</th>
                        <th scope="col">Fecha captura</th>
                        <th scope="col">Visualizar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var document in ViewBag.Documents)
                    {
                        <tr>
                            <td>@document.TURNADO</td>
                            <td>@document.DESTINO</td>
                            <td>@document.FIRMANTE</td>
                            <td>@document.ORIGEN</td>
                            <td>@document.CARGO</td>
                            <td>@document.TIPO</td>
                            <td>@document.ESTADO</td>
                            <td>@document.COPIA_FISICA</td>
                            <td>@document.FECHA_CAPTURA</td>
                            <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Ver</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Documento</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/Home/Home" method="put">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-4">
                                    <div class="d-flex justify-content-center">
                                        <label>Imagen</label>
                                    </div>
                                    
                                    <img class="img-fluid " style="max-width: 300px;" src="~/índice.png" />
                                </div>
                                <div class="col-8">
                                    <div class="d-flex ">
                                        <label class="col-4">Folio</label>
                                        <label class="col-4">Fecha Captura</label>
                                        <label class="col-4">Estado</label>

                                    </div>
                                    <div class="form-group d-flex justify-content-around">

                                        <input type="text" class="form-control col-4" value="12345678910">

                                        <input type="text" class="form-control col-4 ml-2 mr-2" value="2018-07-18">

                                        <input type="text" class="form-control col-4" value="Atendido">

                                    </div>
                                    <div class="d-flex ">
                                        <label class="col-4">Nombre</label>
                                        <label class="col-4">Correo</label>
                                        <label class="col-4">Direccion</label>

                                    </div>
                                    <div class="form-group d-flex justify-content-around">
                                        <input type="text" class="form-control col-4" value="ARACELI GARCIA ALVAREZ">

                                        <input type="text" class="form-control col-4 ml-2 mr-2" value="ARACELY@GMAIL.COM">

                                        <input type="text" class="form-control col-4" value="PESCA">

                                    </div>
                                    <div class="d-flex ">
                                        <label class="col-4">Origen</label>
                                        <label class="col-4">Tipo de Documento</label>
                                        <label class="col-4">Telefono</label>
                                    </div>
                                    <div class="form-group d-flex justify-content-around">

                                        <input type="text" class="form-control col-4" value="H.AYUNTAMIENTO DE VILLA DE ALVAREZ">

                                        <input type="text" class="form-control col-4 ml-2 mr-2" value="INVITACION">

                                        <input type="text" class="form-control col-4" value="3124567821">

                                    </div>
                                    <div class="d-flex ">
                                        <label class="ml-5">Copia Fisica</label>
                                    </div>
                                    <div class="form-group d-flex ">

                                        <input type="text" class="form-control" style="max-width: 100px;" value="Si">

                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="card border-secondary ">
                                        <div class="card-header">Resumen</div>
                                        <div class="card-body text-secondary">
                                            <h5 class="card-title">Secondary card title</h5>
                                            <p class="card-text">
